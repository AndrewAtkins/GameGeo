<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewPictionaryDialog"
    android:paddingBottom="15dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/dialog_pictionary_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/pictionary_guess_text"/>
        <EditText
            android:id="@+id/pictionary_guess_text"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:inputType="text"
            android:layout_below="@id/dialog_pictionary_imageview"/>
        <Button
            android:id="@+id/pictionary_guess_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Submit"
            />
    </LinearLayout>
</FrameLayout>