<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartChallengeSelectDialog"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What kind of challenge would you like to begin?"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/start_pictionary_challenge_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pictionary Challenge"/>
        <Button
            android:id="@+id/start_trivia_challenge_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trivia Challenge"/>
    </LinearLayout>

</FrameLayout>